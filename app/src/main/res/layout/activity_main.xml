<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/levelHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Level - "
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/levelValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/levelHeading"/>

    //

    <TextView
        android:id="@+id/isChargingHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charging Status - "
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelHeading"/>

    <TextView
        android:id="@+id/isChargingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/levelHeading"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toRightOf="@+id/isChargingHeading"/>
//

    <TextView
        android:id="@+id/batteryHealthHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Health - "
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isChargingHeading"/>

    <TextView
        android:id="@+id/batteryHealthValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/isChargingHeading"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toRightOf="@+id/isChargingHeading"/>
</androidx.constraintlayout.widget.ConstraintLayout>